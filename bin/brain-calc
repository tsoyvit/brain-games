#!/usr/bin/env php
<?php

namespace Hexlet\Code;

use function Hexlet\Code\Games\BrainCalc\getGameData;

require 'vendor/autoload.php';
require_once 'src/Engine.php';
require_once 'src/games/BrainCalc.php';


$gameData = getGameData();
