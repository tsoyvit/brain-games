#!/usr/bin/env php
<?php

namespace Hexlet\Code;

use function Hexlet\Code\Games\BrainProgression\getGameData;

require 'vendor/autoload.php';
require_once 'src/Engine.php';
require_once 'src/games/Brain-progression.php';

$gameData = getGameData();
$rules = $gameData['rules'];
